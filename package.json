{
  "name": "iv",
  "version": "0.0.3-SNAPSHOT",
  "description": "JS template engine mixing JS and NG2 concepts",
  "repository": {
    "type": "git"
  },
  "main": "dist/rollup-plugin-iv.cjs.js",
  "module": "dist/rollup-plugin-iv.es.js",
  "author": "Bertrand Laporte",
  "scripts": {
    "clean": "rm -rf dist/",
    "build-compiler": "rollup --config rollup.compiler.config.js",
    "build-test": "rollup -c rollup.test.config.js",
    "build": "yarn run clean && yarn run build-compiler && yarn run build-test",
    "mocha": "mocha dist/test.js --reporter dot",
    "test": "yarn run build && yarn run mocha",
    "dev": "yarn run clean && concurrently -r \"rollup -w -c rollup.compiler.config.js\" \"chokidar --silent 'src/test/*' 'dist/rollup-plugin-iv.es.js' -c 'echo Building and running tests... && yarn run build-test'\" \"chokidar --silent 'dist/test.js' -c 'yarn run mocha'\"",
    "build-flex": "cpx 'src/samples/flex/**/*.{html,js,css,svg}' dist/flex && rollup --config rollup.flex.config.js",
    "build-svg": "cpx 'src/samples/svg/**/*.{html,js,css,svg}' dist/svg && rollup --config rollup.svg.config.js",
    "start": "serve dist/flex"
  },
  "license": "UNLICENSED",
  "private": true,
  "bugs": {},
  "homepage": "",
  "devDependencies": {
    "rollup": "^0.43.0",
    "rollup-watch": "^4.0.0",
    "rollup-plugin-typescript2": "^0.4.3",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-plugin-gzip": "^1.2.0",
    "tslib": "^1.7.1",
    "typescript": ">=2.3.4",
    "mocha": "^3.4.2",
    "cpx": "1.5.0",
    "@types/node": "^8.0.7",
    "@types/mocha": "^2.2.41",
    "chokidar-cli": "^1.2.0",
    "concurrently": "^3.5.0",
    "serve": "^6.0.1"
  },
  "dependencies": {
    "typescript": ">=2.3.4"
  },
  "engines": {
    "node": ">=7.0.31"
  }
}